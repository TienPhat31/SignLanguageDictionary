<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.getElementById('uploadForm').addEventListener('submit', function (e) {
        const fileInput = document.getElementById('modelFiles');
        const files = fileInput.files;
        const allowedFiles = ['metadata.json', 'model.json', 'weights.bin'];

        for (const file of files) {
            if (!allowedFiles.includes(file.name)) {
                e.preventDefault(); // Ngăn chặn gửi form
                Swal.fire({
                    icon: 'error',
                    title: 'Invalid File',
                    html: `Only the following files are allowed: <br>
                           <strong>metadata.json</strong> | 
                           <strong>model.json</strong> | 
                           <strong>weights.bin</strong>`,
                });
                return;
            }
        }
    });
</script>



