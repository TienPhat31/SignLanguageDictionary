<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<!-- SORTED BY DIFFICULT LEVEL -->
<script>
    document.addEventListener('DOMContentLoaded', () => {
        // Get the sort select dropdown
        const sortSelect = document.getElementById('sort-select');

        sortSelect.addEventListener('change', async () => {
            const sortOption = sortSelect.value;


            try {
                const response = await axios.get(`/user/test?sorted=${encodeURIComponent(sortOption)}`);

                const data = response.data;
                updateVocabularyList(data);
            } catch (error) {
                console.error('Axios error:', error);
            }
        });


    });

    function updateVocabularyList(vocabularyList) {
        const vocabularyContainer = document.getElementById('vocabulary-list');
        vocabularyContainer.innerHTML = ''; // Xóa nội dung cũ

        vocabularyList.forEach(vocabulary => {
            const vocabItem = document.createElement('div');
            vocabItem.style.marginBottom = "25px";
            vocabItem.style.boxShadow = "5px 5px 5px rgb(232, 232, 232)";
            vocabItem.classList.add("col-md-3");

            vocabItem.innerHTML = `
                    
                    <div class="image-wrap entry">
                        <a href="/user/detail-vocabulary/${vocabulary._id}">
                            <div class="video-container">
                                <video style="height: 180px; object-fit:cover"
                                    class="img-responsive"
                                    src="${vocabulary.vocabulary_video_link.replace('src\\public', '')}"
                                    muted></video>
                                <div class="countdown" id="countdown-${vocabulary._id}">3</div>
                            </div>
                        </a>
                    </div>
                    <div class="course-details shop-box text-center">
                        <h4>
                            <a href="/user/detail-vocabulary/${vocabulary._id}" title="">
                                ${vocabulary.vocabulary_name}
                            </a>
                            <small>
                                ${vocabulary.vocabulary_topic}
                            </small>
                        </h4>
                    </div>
                    <div class="course-footer clearfix">
                        <div class="pull-left">
                            <ul class="list-inline">
                                <li>Độ khó:
                                    ${Array(parseInt(vocabulary.vocabulary_difficulty_level, 10))
                    .fill(0)
                    .map(() => '<i class="fa fa-star"></i>')
                    .join('')}
                                </li>
                            </ul>
                            <ul style="margin-top: 10px;" class="list-inline">
                                <li><a href="#"><i class="fa fa-heart-o"></i> Yêu thích </a></li>
                            </ul>
                        </div>
                    </div>
            `;

            vocabularyContainer.appendChild(vocabItem);
        });
    }

</script>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        // Xử lý sự kiện cho nút yêu thích
        const favoriteButtons = document.querySelectorAll('.list-inline li[data-vocabularyID]');

        favoriteButtons.forEach(button => {
            button.addEventListener('click', function () {
                const icon = this.querySelector('i');
                const vocabularyId = this.getAttribute('data-vocabularyID');

                // Gọi API để cập nhật trạng thái yêu thích
                axios.post('/user/add-vocabulary-user', { vocabularyId: vocabularyId })
                    .then(response => {
                        if (response.data.success) {
                            // Thay đổi icon
                            icon.classList.toggle('fa-heart-o');
                            icon.classList.toggle('fa-heart');
                        } else {
                            console.error('Failed to update favorite status');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                    });
            });
        });
    });
</script>

