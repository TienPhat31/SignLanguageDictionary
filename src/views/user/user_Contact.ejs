    <!-- CSS cho chủ đề -->
    <style>
        .caro-item {
            width: 100%;
            max-width: 300px;
            /* Đặt chiều rộng tối đa cho các mục */
            height: 450px;
            /* Chiều cao cố định */
            overflow: hidden;
            /* Đảm bảo nội dung không vượt ra ngoài khung */
            margin: 0 auto;
            /* Căn giữa các mục */
        }

        .course-box {
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .image-wrap {
            height: 60%;
            /* Chiều cao phần hình ảnh */
            overflow: hidden;
        }

        .image-wrap img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            /* Đảm bảo hình ảnh lấp đầy khung */
        }

        .course-details {
            padding: 10px;
            height: 30%;
            /* Chiều cao phần chi tiết */
            overflow: hidden;
            text-overflow: ellipsis;
            /* Đảm bảo văn bản không vượt quá khung */
        }

        .course-footer {
            padding: 10px;
            height: 10%;
            /* Chiều cao phần footer */
        }
    </style>

