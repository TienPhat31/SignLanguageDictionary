<head>

    <!-- Basic -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <!-- Mobile Meta -->
    <meta name="viewport" content="width=device-width, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">

    <!-- Site Meta -->
    <title>Sign Language dictionary</title>
    <meta name="keywords" content="">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Site Icons -->
    <link rel="shortcut icon" href="/frontend/user/images/favicon.ico" type="image/x-icon" />
    <link rel="apple-touch-icon" href="/frontend/user/images/apple-touch-icon.png">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,400i,500,700,900" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Droid+Serif:400,400i,700,700i" rel="stylesheet">

    <!-- Custom & Default Styles -->
    <link rel="stylesheet" href="/frontend/user/css/bootstrap.min.css">
    <link rel="stylesheet" href="/frontend/user/css/font-awesome.min.css">
    <link rel="stylesheet" href="/frontend/user/css/carousel.css">
    <link rel="stylesheet" href="/frontend/user/css/animate.css">
    <link rel="stylesheet" href="/frontend/user/style.css">

    <!--[if lt IE 9]>
		<script src="js/vendor/html5shiv.min.js"></script>
		<script src="js/vendor/respond.min.js"></script>
	<![endif]-->

    <!-- CSS cho chủ đề -->
    <style>
        .caro-item {
            width: 100%;
            max-width: 300px;
            /* Đặt chiều rộng tối đa cho các mục */
            height: 450px;
            /* Chiều cao cố định */
            overflow: hidden;
            /* Đảm bảo nội dung không vượt ra ngoài khung */
            margin: 0 auto;
            /* Căn giữa các mục */
        }

        .course-box {
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .image-wrap {
            height: 60%;
            /* Chiều cao phần hình ảnh */
            overflow: hidden;
        }

        .image-wrap img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            /* Đảm bảo hình ảnh lấp đầy khung */
        }

        .course-details {
            padding: 10px;
            height: 30%;
            /* Chiều cao phần chi tiết */
            overflow: hidden;
            text-overflow: ellipsis;
            /* Đảm bảo văn bản không vượt quá khung */
        }

        .course-footer {
            padding: 10px;
            height: 10%;
            /* Chiều cao phần footer */
        }
    </style>

    <!-- CSS cho thanh SEARCH -->
    <style>
        .search-container {
            margin-top: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .search-container input[type="text"] {
            width: 60%;
            padding: 20px;
            font-size: 16px;
            border: 2px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            margin-right: 10px;
        }

        .search-container button {
            padding: 20px 40px;
            font-size: 16px;
            cursor: pointer;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 4px;
            transition: 1s ease;
        }

        .search-container button:hover {
            background-color: #0056b3;
        }
    </style>

</head>

<body>

    <!-- LOADER -->
    <div id="preloader">
        <img class="preloader" src="/frontend/user/images/loader.gif" alt="">
    </div><!-- end loader -->
    <!-- END LOADER -->

    <div id="wrapper">
        <%- include('../components/frontend/user_Header') %>

            <section style="height: 500px;" id="home" class="video-section js-height-full">
                <div class="overlay"></div>
                <div class="home-text-wrapper relative container">
                    <div class="home-message">
                        <p>Từ điển ngôn ngữ kí hiệu</p>
                        <small>Tìm kiếm ngôn ngữ ký hiệu Việt Nam - ngôn ngữ dấu hiệu - thủ ngữ - ngôn ngữ bằng tay của
                            người câm điếc và khiếm thính. Cơ bản và nâng cao. Hỗ trợ trong dạy và học ngôn ngữ ký
                            hiệu</small>
                        <div class="btn-wrapper">
                            <div class="text-center">
                                <a href="#" class="btn btn-primary wow slideInLeft">Đọc thêm</a> &nbsp;&nbsp;&nbsp;
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <section class="section db p120">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="tagline-message page-title text-center">
                                <h3>Chủ đề</h3>
                                <ul class="breadcrumb">
                                    <li><a href="javascript:void(0)">Trang chủ</a></li>
                                    <li class="active">Chủ đề</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Thanh tìm kiếm -->
            <section class="section db p120" style="background-color: white;">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="tagline-message page-title text-center">
                                <div class="search-container">
                                    <input type="text" id="searchInput" placeholder="Tìm kiếm từ vựng...">
                                    <button onclick="searchVocabulary()">Tìm kiếm</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>



            <section class="section gb nopadtop">
                <div class="container">
                    <div class="boxed boxedp4">
                        <div class="row blog-grid">
                            <% topics.forEach(topic=> { %>
                                <div class="col-md-4">
                                    <div class="course-box">
                                        <div class="image-wrap entry">
                                            <img style="height: 180px; object-fit: contain"
                                                src="/images/<%=topic.topic_image %>" alt="" class="img-responsive">
                                        </div><!-- end image-wrap -->
                                        <div class="course-details">
                                            <h4>
                                                <small>Chủ đề</small>
                                                <a href="#" title="">
                                                    <h2>
                                                        <%= topic.topic_name %>
                                                    </h2>
                                            </h4>
                                            <p>
                                                <%= topic.topic_description %>
                                            </p>
                                        </div><!-- end details -->
                                        <div class="course-footer clearfix">
                                            <div class="pull-left">
                                                <ul class="list-inline">
                                                    <li><a href="#"><i class="fa fa-clock-o"></i> 15 Jun</a></li>
                                                    <li><a href="#"><i class="fa fa-eye"></i> 122 Views</a></li>
                                                </ul>
                                            </div><!-- end left -->
                                        </div><!-- end footer -->
                                    </div><!-- end box -->
                                </div><!-- end col -->
                                <% }); %>

                        </div><!-- end row -->
                    </div><!-- end boxed -->
                </div><!-- end container -->
            </section>


            <!-- FOOTER -->
            <%- include('../components/frontend/user_Footer') %>
    </div><!-- end wrapper -->

    <!-- jQuery Files -->
    <script src="/frontend/user/js/jquery.min.js"></script>
    <script src="/frontend/user/js/bootstrap.min.js"></script>
    <script src="/frontend/user/js/carousel.js"></script>
    <script src="/frontend/user/js/animate.js"></script>
    <script src="/frontend/user/js/custom.js"></script>
    <!-- VIDEO BG PLUGINS -->
    <script src="/frontend/user/js/videobg.js"></script>


    <script>
        function searchVocabulary() {
            const input = document.getElementById('searchInput').value.trim().toLowerCase();

            if (input) {
                // Chuyển hướng người dùng đến API với từ khóa tìm kiếm
                window.location.href = `/user/list-vocabulary-letter/${input}`;
            } else {
                alert("Vui lòng nhập từ vựng để tìm kiếm!");
            }
        }
    </script>

</body>

</html>